$cell-padding = 0.75rem


form,
.form
  display: block
  width: $whole
  border-top: 0
  border-left: 0


  h1, .h1,
  h2, .h2,
  h3, .h3,
  h4, .h4,
  h5, .h5,
  h6, .h6
    padding: $cell-padding


label
  padding: $cell-padding
  vertical-align: baseline


  input,
  select
    appearance(none)
    box-sizing: border-box
    width: $whole
    border: 1px solid buttonface
    line-height: $line-height
    padding: 0.5rem 0


select
  option
    min-height: 1rem
    line-height: $line-height
