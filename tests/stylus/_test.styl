
//
// DEMO STYLES
//


$trans-speed = 0.2s
$trans-style = linear


@import "../../stylus/main"


.blue
  background-color: #57bcff

.violet
  background-color: #c672ff

.magenta
  background-color: #ff82cc

.orange
  background-color: #ffc66f

.yellow
  background-color: #ffff94

.green
  background-color: #9fa


img
  display: inline-block
  width: 100%


.demo-nested-containers
  .col
    padding: 1rem


.demo
  padding: 0.5rem

  code
    font-size: 1.5rem
    line-height: 3rem
    text-align: center
    background-color: transparent


.demo-dynamic-columns
  .demo
    &::before
      content: ""
      position: absolute
      top: 0
      right: 0
      background-color: #3c3c3c
      color: #f3f3f3
      padding: 0.5rem 1rem





//
// FORM STYLES
//

form,
.form
  border: 1px solid buttonface
  border-top: 0
  border-left: 0
  border-radius: 5px
  overflow: hidden

  h1, .h1,
  h2, .h2,
  h3, .h3,
  h4, .h4,
  h5, .h5,
  h6, .h6
    border: 1px solid buttonface
    border-bottom: 0
    border-right: 0
    background-color: lighten($dimgray, 50%)
    margin: 0
    font-size: 1rem


  button,
  .button,
  [type="button"],
  [type="submit"],
  [type="reset"]
    text-align: center

  [type="reset"]
    opacity: 0.5
    transition: opacity $trans-speed $trans-style

    &:hover
      opacity: 1


label
  border: 1px solid buttonface
  border-right: 0
  border-bottom: 0

  [type="text"],
  [type="url"],
  [type="number"],
  [type="email"],
  [type="tel"],
  select
    border: 0
    border-bottom: 1px solid buttonface
    transition: all $trans-speed $trans-style

    &:focus
      outline: 0
      border-bottom-color: #f90



@media all and (min-width: $mobile)
  .demo-dynamic-columns
    .demo
      &::before
        content: "mobile: " attr(mobile)


@media all and (min-width: $tablet)
  .demo-dynamic-columns
    .demo
      &::before
        content: "tablet: " attr(tablet)


@media all and (min-width: $desktop)
  .demo-dynamic-columns
    .demo
      &::before
        content: "desktop: " attr(desktop)
